#!/bin/sh

set -e

id="$(git log --format="%H" -n 1)"
log="$(git log --pretty=format:%s -1)"
while sleep 5; do
    case "$(hub ci-status "$id")" in
        "no status") break;;
        "success") notify "âœ… CI successful: $(git remote get-url origin|xargs basename|sed 's|.git$||')" "$log"; break;;
        "failure") notify "ðŸ’¥ CI failed: $(git remote get-url origin|xargs basename|sed 's|.git$||')" "$log"; break;;
        "running") echo "Running...";;
        *) break;;
    esac
done
