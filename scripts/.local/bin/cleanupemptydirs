#!/bin/sh

set -e

cd "${1:-.}"
fd '.DS_Store' --no-ignore --hidden -x rm 
find . -type d -links 2 -print0 | xargs -0 rm -rfv
find . -type d -links 2 -print0 | xargs -0 rm -rfv
find . -type d -links 2 -print0 | xargs -0 rm -rfv
find . -type d -links 2 -print0 | xargs -0 rm -rfv
find . -type d -links 2 -print0 | xargs -0 rm -rfv
find . -type d -links 2 -print0 | xargs -0 rm -rfv
