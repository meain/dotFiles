#!/bin/sh

set -e

# used to dump all the files I don't need in my local to a github repo

DUMP_DIR="$HOME/.local/share/dump"
DUMP_REPO="git@github.com:meain/dump.git"

NO_REMOVE=0
[ "$1" = "--no-rm" ] && NO_REMOVE=1 && shift

[ ! -d "$DUMP_DIR/.git" ] && git clone "$DUMP_REPO" "$DUMP_DIR"
if [ "$NO_REMOVE" = 0 ];then
    mv -iv "$1" "$DUMP_DIR"
else
    cp -irv "$1" "$DUMP_DIR"
fi
cd "$DUMP_DIR"
git add .
git commit -m "Added $1"
git push origin master
