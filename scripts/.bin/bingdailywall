#!/usr/bin/env bash

set -e

url="$(curl -s https://www.bing.com|pup '.img_cont'|
    grep -o 'url([^)]*'|
    sed 's|url(|https://www.bing.com|')"
dir='/tmp/bing-images/'
pic="$dir$(date +%y%m%d).jpg"

mkdir -p $dir
[ "$url" == "$(cat /tmp/bing-images/picurl)" ] || curl -so "$pic" "$url"
echo "$url" > /tmp/bing-images/picurl
echo "$pic"
